@{
    ViewData["Title"] = "Home Page";
    Layout = "~/Views/Shared/_LoginLayout.cshtml";
}
@model SQH.Entities.Models.Login

<div class="container">
    <div id="loginbox" style="margin-top:50px;" class="mainbox col-md-6 col-md-offset-3 col-sm-8 col-sm-offset-2">
        <div class="panel panel-info">
            <div class="panel-heading">
                <div class="panel-title">SQHoras Login</div>
            </div>
            <div style="padding-top:30px" class="panel-body">
                <div style="display:none" id="login-alert" class="alert alert-danger col-sm-12"></div>

                <form id="loginform" asp-action="Index" asp-controller="Home" class="form-horizontal" role="form">

                    <div style="margin-bottom:10px;" class="input-group">
                        <span class="input-group-addon"><i class="glyphicon glyphicon-user"></i></span>
                        <input asp-for="usuario" class="form-control" value="" placeholder="Usuário..">
                    </div>
                    <span asp-validation-for="usuario" class="text-danger"></span>

                    <div style="margin-bottom:10px;"  class="input-group">
                        <span class="input-group-addon"><i class="glyphicon glyphicon-lock"></i></span>
                        <input asp-for="senha" class="form-control" placeholder="Senha..">
                    </div>
                    <span asp-validation-for="senha" class="text-danger"></span>

                    <div class="input-group">
                        <div class="checkbox">
                            <label>
                                <input asp-for="lembrar" type="checkbox" name="remember" value="1"> Lembrar?
                            </label>
                        </div>
                    </div>

                    <div style="margin-top:10px" class="form-group">
                        <div class="col-sm-12 controls">
                            <input type="submit" class="btn btn-success" value="Login" />
                            @*<a id="btn-fblogin" href="#" class="btn btn-primary">Login with Facebook</a>*@
                        </div>
                    </div>
                </form>

            </div>
        </div>
    </div>
</div>